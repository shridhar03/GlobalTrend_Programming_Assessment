function flattenArray(nestedArray) {
  const result = [];

  function flatten(arr) {
    arr.forEach(element => {
      if (Array.isArray(element)) {
        flatten(element);
      } else {
        result.push(element);
      }
    });
  }

  flatten(nestedArray);
  return result;
}

const nestedArray = [1, [2, [3, 4], 5], 6, [7, 8]];
console.log(flattenArray(nestedArray)); 
